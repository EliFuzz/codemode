{
  "name": "codemode",
  "version": "1.0.2",
  "description": "Code Mode MCP server - Execute TypeScript code with access to all registered MCP server tools",
  "homepage": "https://github.com/EliFuzz/cm#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/EliFuzz/cm.git"
  },
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "codemode": "build/index.js"
  },
  "files": [
    "build",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node build/index.js",
    "dev": "mcp-inspector --transport stdio tsx --watch src/index.ts",
    "test": "vitest run"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "codemode",
    "code-execution",
    "typescript",
    "sandbox",
    "agent",
    "tools"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.1",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "0.18.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "tsc-alias": "^1.8.16",
    "tsx": "4.21.0",
    "vitest": "^4.0.16"
  }
}
